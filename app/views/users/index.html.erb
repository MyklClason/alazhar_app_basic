<h1>All investors</h1>

<table>
	<tr><th>First Name</th><th>Last Name</th><th>Total Investment</th><th>Current Balance</th></tr>
	<% @users.each do |u| %>
	<tr>
		<td><% if u.first_name %><%= u.first_name %><% else %>N/A<% end %></td>
		<td><% if u.last_name %><%= u.last_name %><% else %>N/A<% end %></td>
		<td><% if u.total_investment %><%= u.total_investment %><% else %>N/A<% end %></td>
		<td><% if u.balance %><%= best_in_place u, :balance %><% else %>N/A<% end %></td>
		<td><%= link_to "Show more", user_path(u.id) %></td>
	</tr>
	<% end %>
</table>

