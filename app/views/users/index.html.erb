<h2>All investors</h2>

<table class = "table">
	<tr><th>First Name</th><th>Last Name</th><th>Total Investment</th><th>Current Balance</th><th>Actions</th></tr>
	<% @users.each do |u| %>
	<tr>
		<td><% if u.first_name %><%= u.first_name %><% else %>N/A<% end %></td>
		<td><% if u.last_name %><%= u.last_name %><% else %>N/A<% end %></td>
		<td><% if u.total_investment %><%= best_in_place u, :total_investment %><% else %>N/A<% end %></td>
		<td><%= best_in_place u, :balance %></td>
		<td><%= link_to "Show more", user_path(u.id) %> | <%= link_to "Edit Info", edit_user_path(u.id) %></td>
	</tr>
	<% end %>
</table>

