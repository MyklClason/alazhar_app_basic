<h2>Reset Password</h2>

<%= form_tag password_resets_path, :method => :post do %>
<p>Enter the email address you use to sign in with below to reset your password.</p>
  <div class="form-group">
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email] %>
  </div>
  <div class="actions"><%= submit_tag "Reset Password", class: "btn btn-primary" %></div>
<% end %>